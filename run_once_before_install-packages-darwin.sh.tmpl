brew "coreutils"
brew "exa"
brew "fd"
brew "fish"
brew "fzf"
brew "gh"
brew "git-extras"
brew "gnu-sed"
brew "gnuplot"
brew "jq"
brew "kubectx"
brew "llvm"
brew "neovim", args: ['HEAD']
brew "ninja"
brew "pinentry-mac"
brew "pipx"
brew "podman"
brew "postgresql"
brew "readline"
brew "ripgrep"
brew "rust-analyzer"
brew "shellcheck"
brew "sops"
brew "sqlite"
brew "stylua"
brew "tmux"
brew "wget"
brew "yq"
